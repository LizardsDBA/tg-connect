<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.coordenacao.MapaCoordController"
      spacing="0"
      stylesheets="@/application.css">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/></padding>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Home" onAction="#goHome"/>
        <Button text="Sair" onAction="#logout"/>
    </HBox>

    <!-- Main Layout with Sidebar -->
    <HBox VBox.vgrow="ALWAYS" spacing="16.0">
        <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>

        <!-- Sidebar -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Coordenador"/>
            <Label styleClass="sidebar-group" text="GERAL"/>

            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goVisaoGeral" styleClass="sidebar-link" text="Visão Geral"/>
            <Button fx:id="btnMapa" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goMapa" styleClass="sidebar-link" text="Mapa de Orientação"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goAndamento" styleClass="sidebar-link" text="Andamento Geral"/>
        </VBox>

        <!-- Main Content -->
        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <!-- Breadcrumbs -->
            <Label styleClass="subtle" text="Coordenador / Mapa de Orientação"/>

            <!-- Título -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Mapa de Orientação (Professor ↔ Alunos)"/>
                <Label styleClass="subtitle" text="Visualize rapidamente quem orienta quem e o status do TG."/>
            </VBox>

            <!-- Filtros simples -->
            <HBox spacing="8.0" alignment="CENTER_LEFT">
                <Label text="Buscar:"/>
                <TextField fx:id="txtBusca" promptText="Professor, aluno ou tema..." HBox.hgrow="ALWAYS"/>
                <Label text="Status:"/>
                <ChoiceBox fx:id="cbStatus"/>
                <Button text="Limpar" onAction="#limparFiltros"/>
            </HBox>

            <!-- Tabela -->
            <TableView fx:id="tblMapa" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colProfessor" text="Professor" prefWidth="220"/>
                    <TableColumn fx:id="colAluno" text="Aluno" prefWidth="240"/>
                    <TableColumn fx:id="colTema" text="Tema" prefWidth="320"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="140"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/></padding>
        <Label styleClass="subtle" text="Wireframe API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Módulo Coordenador"/>
    </HBox>
</VBox>
