<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.aluno.CompararAlunoController"
      spacing="0">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding>
            <Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/>
        </padding>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Home" onAction="#goHome"/>
        <Button text="Sair" onAction="#logout"/>
    </HBox>

    <!-- Main Layout with Sidebar -->
    <HBox VBox.vgrow="ALWAYS" spacing="16.0">
        <padding>
            <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
        </padding>

        <!-- Sidebar (mesmo padrão do DashboardAluno) -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Aluno"/>
            <Label styleClass="sidebar-group" text="GERAL"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Dashboard" onAction="#goDashboard"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Inbox" onAction="#goInbox"/>

            <Label styleClass="sidebar-group" text="TG"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Markdown (Editor e Feedback)" onAction="#goEditor"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Comparar Versões" onAction="#goComparar"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Conclusão" onAction="#goConclusao"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Histórico" onAction="#goHistorico"/>
        </VBox>

        <!-- Main Content (card) -->
        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <!-- Page Title -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Aluno — Comparar Versões"/>
                <Label styleClass="subtitle" text="Selecione duas versões e visualize as diferenças."/>
            </VBox>

            <!-- Grid de comparação -->
            <GridPane hgap="12.0" vgap="12.0" styleClass="comparison-grid">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- Versão A -->
                <VBox GridPane.columnIndex="0" spacing="8.0" styleClass="version-column">
                    <Label text="Versão A" styleClass="version-title"/>
                    <ScrollPane fitToWidth="true" styleClass="version-scroll-pane">
                        <VBox fx:id="contentA" spacing="8.0" styleClass="version-content">
                            <Label text="Conteúdo da Versão A..."/>
                        </VBox>
                    </ScrollPane>
                </VBox>

                <!-- Versão B -->
                <VBox GridPane.columnIndex="1" spacing="8.0" styleClass="version-column">
                    <Label text="Versão B" styleClass="version-title"/>
                    <ScrollPane fitToWidth="true" styleClass="version-scroll-pane">
                        <VBox fx:id="contentB" spacing="8.0" styleClass="version-content">
                            <Label text="Conteúdo da Versão B..."/>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </GridPane>

            <!-- Similaridade -->
            <HBox alignment="CENTER_LEFT" spacing="8.0" styleClass="similarity-bar-container">
                <Label text="Similaridade:" styleClass="similarity-label"/>
                <ProgressBar fx:id="similarityBar" progress="0.75"
                             HBox.hgrow="ALWAYS" styleClass="similarity-progress-bar"/>
                <Label fx:id="similarityPct" text="75%" styleClass="similarity-percentage"/>
            </HBox>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding>
            <Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/>
        </padding>
        <Label styleClass="subtle" text="Wireframe API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Grupo LizzardsDBA"/>
    </HBox>
</VBox>
