<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.aluno.ConclusaoAlunoController"
      spacing="0">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/></padding>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Home" onAction="#goHome"/>
        <Button text="Sair" onAction="#logout"/>
    </HBox>

    <!-- Main Layout with Sidebar -->
    <HBox VBox.vgrow="ALWAYS" spacing="16.0">
        <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>

        <!-- Sidebar (mesmo do DashboardAluno) -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Aluno"/>
            <Label styleClass="sidebar-group" text="GERAL"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Dashboard" onAction="#goDashboard"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Inbox" onAction="#goInbox"/>

            <Label styleClass="sidebar-group" text="TG"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Markdown (Editor e Feedback)" onAction="#goEditor"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Comparar Versões" onAction="#goComparar"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Conclusão" onAction="#goConclusao"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Histórico" onAction="#goHistorico"/>
        </VBox>

        <!-- Main Content (card) -->
        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <!-- Título -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Aluno — Conclusão"/>
                <Label styleClass="subtitle" text="Acompanhe o percentual por seção e exporte seu TG."/>
            </VBox>

            <!-- KPIs -->
            <GridPane hgap="12.0" vgap="12.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES"/>
                </rowConstraints>

                <VBox alignment="CENTER" styleClass="kpi" GridPane.columnIndex="0">
                    <Label text="Conclusão Geral"/>
                    <Label fx:id="lblConclusaoGeral" styleClass="title" text="0%"/>
                </VBox>
                <VBox alignment="CENTER" styleClass="kpi" GridPane.columnIndex="1">
                    <Label text="Seções Concluídas"/>
                    <Label fx:id="lblSecoesConcluidas" styleClass="title" text="0/6"/>
                </VBox>
                <VBox alignment="CENTER" styleClass="kpi" GridPane.columnIndex="2">
                    <Label text="Última Atualização"/>
                    <Label fx:id="lblUltimaAtualizacao" styleClass="title" text="—"/>
                </VBox>
            </GridPane>

            <!-- Tabela por seção -->
            <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                <Label styleClass="subtitle" text="Detalhamento por Seção"/>
                <TableView fx:id="tblSecoes" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colSecao" text="Seção" prefWidth="200"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="140"/>
                        <TableColumn fx:id="colPercentual" text="\%" prefWidth="80"/>
                        <TableColumn fx:id="colAtualizadoEm" text="Atualizado em" prefWidth="160"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Ações -->
            <HBox spacing="8.0" alignment="CENTER_RIGHT">
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Recalcular" onAction="#recalcular"/>
                <Button text="Exportar .md" onAction="#exportMd"/>
                <Button text="Exportar .pdf" onAction="#exportPdf"/>
            </HBox>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/></padding>
        <Label styleClass="subtle" text="Wireframe API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Grupo LizzardsDBA"/>
    </HBox>
</VBox>
