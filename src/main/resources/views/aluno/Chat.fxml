<!DOCTYPE fxml PUBLIC "-//javafx.com//DTD FXML 1.0//EN" "http://javafx.com/fxml/1">

<GridPane fx:controller="com.example.AlunoChatController" xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10" stylesheets="@style.css">
    <!-- Row 0: Header -->
    <HBox GridPane.rowIndex="0" GridPane.columnSpan="2" styleClass="header">
        <ImageView fitHeight="50" fitWidth="100" preserveRatio="true" styleClass="header-logo">
            <image>
                <Image url="@../../images/logo_apitg.png" /> <!-- Placeholder para o logo -->
            </image>
        </ImageView>
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Home" styleClass="header-button" />
        <Button text="Sair" styleClass="header-button" />
    </HBox>

    <!-- Row 1: Main Content Area (Sidebar + Chat Content) -->
    <GridPane GridPane.rowIndex="1" GridPane.columnSpan="2" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="25" /> <!-- Sidebar -->
            <ColumnConstraints percentWidth="75" /> <!-- Main Content -->
        </columnConstraints>

        <!-- Column 0: Sidebar -->
        <VBox GridPane.columnIndex="0" styleClass="sidebar">
            <Label text="Nome do Aluno" styleClass="profile-name" />
            <Button text="Meu Perfil" styleClass="sidebar-button" />
            <Button text="Meus Projetos" styleClass="sidebar-button" />
            <Button text="Chat" styleClass="sidebar-button" />
            <Button text="Configurações" styleClass="sidebar-button" />
        </VBox>

        <!-- Column 1: Main Content (Chat Area) -->
        <VBox GridPane.columnIndex="1" styleClass="main-content">
            <Label text="Chat com Orientador" styleClass="content-title" />
            <HBox styleClass="breadcrumbs">
                <Label text="Home" />
                <Label text=">" />
                <Label text="Chat" />
            </HBox>
            <VBox VBox.vgrow="ALWAYS" styleClass="message-area">
                <!-- Mensagens aqui -->
                <Label text="Orientador: Olá, como posso ajudar?" styleClass="message-orientador" />
                <Label text="Aluno: Tenho uma dúvida sobre o projeto." styleClass="message-aluno" />
            </VBox>
            <HBox styleClass="input-area">
                <TextField HBox.hgrow="ALWAYS" promptText="Digite sua mensagem..." styleClass="message-input" />
                <Button text="Enviar" styleClass="send-button" />
            </HBox>
        </VBox>
    </GridPane>

    <!-- Row 2: Footer -->
    <HBox GridPane.rowIndex="2" GridPane.columnSpan="2" styleClass="footer">
        <Label text="© 2025 API/TG. Todos os direitos reservados." styleClass="footer-text" />
    </HBox>
</GridPane>
