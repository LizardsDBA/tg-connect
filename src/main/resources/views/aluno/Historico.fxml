<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.aluno.HistoricoAlunoController"
      spacing="0">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/></padding>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Home" onAction="#goHome"/>
        <Button text="Sair" onAction="#logout"/>
    </HBox>

    <!-- Main Layout with Sidebar -->
    <HBox VBox.vgrow="ALWAYS" spacing="16.0">
        <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>

        <!-- Sidebar -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Aluno"/>
            <Label styleClass="sidebar-group" text="GERAL"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Dashboard" onAction="#goDashboard"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Inbox" onAction="#goInbox"/>

            <Label styleClass="sidebar-group" text="TG"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Markdown (Editor e Feedback)" onAction="#goEditor"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Comparar Versões" onAction="#goComparar"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Conclusão" onAction="#goConclusao"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Histórico" onAction="#goHistorico"/>
        </VBox>

        <!-- Main Content (card) -->
        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <!-- Título -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Aluno — Histórico"/>
                <Label styleClass="subtitle" text="Linha do tempo de versões e feedbacks."/>
            </VBox>

            <!-- Filtros -->
            <HBox spacing="8.0" alignment="CENTER_LEFT">
                <Label text="Filtrar:"/>
                <ChoiceBox fx:id="cbSecao"/>
                <ChoiceBox fx:id="cbStatus"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Limpar" onAction="#limparFiltros"/>
            </HBox>

            <!-- Tabela de versões -->
            <TableView fx:id="tblVersoes" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colVersao" text="Versão" prefWidth="90"/>
                    <TableColumn fx:id="colCriadoEm" text="Criado em" prefWidth="140"/>
                    <TableColumn fx:id="colSecao" text="Seção" prefWidth="180"/>
                    <TableColumn fx:id="colAlteracoes" text="Alterações" prefWidth="240"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                    <TableColumn fx:id="colRevisor" text="Revisor" prefWidth="160"/>
                </columns>
            </TableView>

            <!-- Ações -->
            <HBox spacing="8.0" alignment="CENTER_RIGHT">
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Ver" onAction="#verSelecionada"/>
                <Button text="Comparar com atual" onAction="#compararComAtual"/>
                <Button text="Restaurar versão" onAction="#restaurarVersao"/>
            </HBox>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/></padding>
        <Label styleClass="subtle" text="Wireframe API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Grupo LizzardsDBA"/>
    </HBox>
</VBox>
