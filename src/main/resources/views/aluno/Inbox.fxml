<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.aluno.InboxAlunoController"
      spacing="0">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/></padding>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button onAction="#goHome" text="Home"/>
        <Button onAction="#logout" text="Sair"/>
    </HBox>

    <!-- Main Layout with Sidebar -->
    <HBox VBox.vgrow="ALWAYS" spacing="16.0">
        <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>

        <!-- Sidebar -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Aluno"/>
            <Label styleClass="sidebar-group" text="GERAL"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goDashboard" styleClass="sidebar-link" text="Dashboard"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goInbox" styleClass="sidebar-link" text="Inbox"/>

            <Label styleClass="sidebar-group" text="TG"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goEditor" styleClass="sidebar-link" text="Markdown (Editor e Feedback)"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goComparar" styleClass="sidebar-link" text="Comparar Versões"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goConclusao" styleClass="sidebar-link" text="Conclusão"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goHistorico" styleClass="sidebar-link" text="Histórico"/>
        </VBox>

        <!-- Main Content (card) -->
        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <!-- Breadcrumbs -->
            <Label styleClass="subtle" text="Aluno / Inbox"/>

            <!-- Título -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Inbox — Chat com Orientador"/>
                <Label styleClass="subtitle" text="Canal único de mensagens entre você e seu orientador."/>
            </VBox>

            <!-- Chat -->
            <BorderPane VBox.vgrow="ALWAYS" styleClass="card" maxHeight="Infinity">
                <!-- Top: dados do orientador -->
                <top>
                    <HBox alignment="CENTER_LEFT" spacing="8.0" styleClass="chat-top">
                        <Label text="Orientador:" styleClass="subtle"/>
                        <Label fx:id="lblPeerName" text="(não definido)"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="lblStatus" text="online" styleClass="subtle"/>
                    </HBox>
                </top>

                <!-- Center: mensagens -->
                <center>
                    <ScrollPane fx:id="chatScroll" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                        <VBox fx:id="chatMessages" spacing="8.0" fillWidth="true" styleClass="chat-messages" />
                    </ScrollPane>
                </center>

                <!-- Bottom: input -->
                <bottom>
                    <HBox spacing="8.0" alignment="CENTER_LEFT" styleClass="chat-input">
                        <TextField fx:id="txtMessage" HBox.hgrow="ALWAYS" promptText="Escreva uma mensagem..." onAction="#enviarMensagem"/>
                        <Button fx:id="btnSend" text="Enviar" onAction="#enviarMensagem"/>
                    </HBox>
                </bottom>
            </BorderPane>

        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/></padding>
        <Label styleClass="subtle" text="Wireframe API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Grupo LizzardsDBA"/>
    </HBox>
</VBox>
