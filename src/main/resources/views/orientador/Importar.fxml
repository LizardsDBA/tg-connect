<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.orientador.ImportarOrientadorController"
      spacing="0"
      stylesheets="@/application.css">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/></padding>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Home" onAction="#goHome"/>
        <Button text="Sair" onAction="#logout"/>
    </HBox>

    <!-- Main Layout with Sidebar -->
    <HBox VBox.vgrow="ALWAYS" spacing="16.0">
        <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>

        <!-- Sidebar -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Orientador"/>
            <Label styleClass="sidebar-group" text="GERAL"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goVisaoGeral" styleClass="sidebar-link" text="Visão Geral"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goPainel" styleClass="sidebar-link" text="Painel"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goNotificacoes" styleClass="sidebar-link" text="Notificações"/>

            <Label styleClass="sidebar-group" text="FERRAMENTAS"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goEditor" styleClass="sidebar-link" text="Editor (Feedback/Parecer)"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goParecer" styleClass="sidebar-link" text="Parecer"/>
            <Button fx:id="btnImportar" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goImportar" styleClass="sidebar-link" text="Importar (Markdown/TG)"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goChat" styleClass="sidebar-link" text="Chat"/>
        </VBox>

        <!-- Main Content -->
        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <!-- Breadcrumbs -->
            <Label styleClass="subtle" text="Orientador / Importar"/>

            <!-- Título -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Orientador — Importar"/>
                <Label styleClass="subtitle" text="Selecione um arquivo (.csv, .md, .markdown, .txt) para pré-visualizar e importar."/>
            </VBox>

            <!-- Área de Upload -->
            <VBox spacing="8.0">
                <Label styleClass="subtitle" text="Upload de Arquivos"/>
                <HBox spacing="8.0" alignment="CENTER_LEFT">
                    <Button fx:id="btnSelecionar" text="Selecionar Arquivo" onAction="#selecionarArquivo"/>
                    <Label fx:id="lblStatus" text="Nenhum arquivo selecionado" />
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnImportarAcao" text="Importar" onAction="#importarArquivo" disable="true" styleClass="btn-primary"/>
                </HBox>
            </VBox>

            <!-- Prévia dos Dados -->
            <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                <Label styleClass="subtitle" text="Prévia dos Dados"/>
                <TableView fx:id="tblPreview" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colPrev1" text="Coluna 1" prefWidth="240"/>
                        <TableColumn fx:id="colPrev2" text="Coluna 2" prefWidth="240"/>
                        <TableColumn fx:id="colPrev3" text="Coluna 3" prefWidth="240"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Histórico de Uploads -->
            <VBox spacing="8.0">
                <Label styleClass="subtitle" text="Histórico de Uploads"/>
                <TableView fx:id="tblHistorico">
                    <columns>
                        <TableColumn fx:id="colHistData" text="Data/Hora" prefWidth="180"/>
                        <TableColumn fx:id="colHistNome" text="Arquivo" prefWidth="360"/>
                        <TableColumn fx:id="colHistStatus" text="Status" prefWidth="160"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/></padding>
        <Label styleClass="subtle" text="Wireframe API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Módulo Orientador"/>
    </HBox>
</VBox>
