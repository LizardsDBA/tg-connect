<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="0" stylesheets="@/application.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.fatec.api.controller.orientador.EditorOrientadorController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets bottom="10.0" left="16.0" right="16.0" top="10.0" /></padding>
        <Label styleClass="logo" text="API/TG" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#goHome" text="Home" />
        <Button onAction="#logout" text="Sair" />
    </HBox>

    <!-- Main (Sidebar + Content) -->
    <HBox spacing="16.0" VBox.vgrow="ALWAYS">
        <padding><Insets bottom="16.0" left="16.0" right="16.0" top="16.0" /></padding>

        <!-- Sidebar -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Orientador" />
            <Label styleClass="sidebar-group" text="GERAL" />
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goVisaoGeral" styleClass="sidebar-link" text="Visão Geral" />
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goPainel" styleClass="sidebar-link" text="Painel" />

            <Label styleClass="sidebar-group" text="FERRAMENTAS" />
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goEditor" styleClass="sidebar-link" text="Feedback" />
            <Button fx:id="btnChat" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goChat" styleClass="sidebar-link" text="Chat" />
        </VBox>

        <!-- Main Content Card -->
        <VBox spacing="16.0" styleClass="card" HBox.hgrow="ALWAYS">


            <!-- Breadcrumbs -->
            <Label styleClass="subtle" text="Orientador / Feedback" />

            <!-- Título -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Orientador — Feedback" />
                <Label styleClass="subtitle" text="Converse com seus alunos (1 canal por aluno)." />
            </VBox>

            <!-- Barra de status (aluno/parte/versão/status) -->
            <HBox alignment="CENTER_LEFT" spacing="12.0">
                <children>
                    <Label text="Aluno:" />
                    <Label fx:id="lblAluno" text=" " />
                    <Label text=" |   Parte:" />
                    <Label fx:id="lblParte" text=" " />
                    <Label text=" |   Versão:" />
                    <Label fx:id="lblVersao" text=" " />
                    <Label text=" |   Status:" />
                    <Label fx:id="lblStatus" text=" " />
                </children>
            </HBox>

            <!-- Abas das Partes (no topo do conteúdo) -->
            <TabPane fx:id="tabPartes"
                     styleClass="editor-tabs"
                     side="TOP"
                     tabClosingPolicy="UNAVAILABLE"
                     minHeight="40.0"
                     prefHeight="52.0"
                     maxHeight="Infinity">
                <tabs>
                    <Tab fx:id="tabApresentacao" text="Apresentação" />
                    <Tab fx:id="tabApi1" text="API 1" />
                    <Tab fx:id="tabApi2" text="API 2" />
                    <Tab fx:id="tabApi3" text="API 3" />
                    <Tab fx:id="tabApi4" text="API 4" />
                    <Tab fx:id="tabApi5" text="API 5" />
                    <Tab fx:id="tabApi6" text="API 6" />
                    <Tab fx:id="tabResumo" text="Resumo" />
                    <Tab fx:id="tabFinais" text="Considerações finais" />
                </tabs>
            </TabPane>

            <!-- Conteúdo dividido: lista de alunos (esq) + preview/ações (dir) -->
            <HBox spacing="16.0" VBox.vgrow="ALWAYS">

                <!-- Lista de orientandos -->
                <VBox prefWidth="320.0" spacing="8.0">
                    <Label text="Alunos Orientados" />
                    <TextField fx:id="txtBuscaAluno" promptText="Buscar por nome..." />
                    <TableView fx:id="tblAlunos" prefHeight="560">
                        <columns>
                            <TableColumn fx:id="colNome" prefWidth="280" text="Nome" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Preview + Comentário + Ações -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Preview (Markdown) — somente leitura" />
                    <TextArea fx:id="txtPreview" editable="false" prefRowCount="22" wrapText="true" VBox.vgrow="ALWAYS" />

                    <Label text="Comentário para o aluno (aparecerá na tela de Chat)" />
                    <HBox spacing="12">
                        <TextArea fx:id="txtComentario" prefRowCount="3" promptText="Escreva seu comentário..." HBox.hgrow="ALWAYS" />
                        <VBox alignment="TOP_RIGHT" spacing="8">
                            <Button fx:id="btnEnviarComentario" maxWidth="Infinity" text="Enviar comentário" />
                            <Button fx:id="btnConcluirParte" maxWidth="Infinity" text="Marcar como concluída" />
                        </VBox>
                    </HBox>
                </VBox>

            </HBox>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets bottom="12.0" left="16.0" right="12.0" top="12.0" /></padding>
        <Label styleClass="subtle" text="TG Connect API 2025-2" />
        <Region HBox.hgrow="ALWAYS" />
        <Label styleClass="subtle" text="Módulo Orientador" />
    </HBox>
</VBox>
