<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.orientador.EditorOrientadorController"
      spacing="0"
      stylesheets="@/application.css">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/></padding>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Home" onAction="#goHome"/>
        <Button text="Sair" onAction="#logout"/>
    </HBox>

    <!-- Main Layout with Sidebar -->
    <HBox VBox.vgrow="ALWAYS" spacing="16.0">
        <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>

        <!-- Sidebar -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Orientador"/>
            <Label styleClass="sidebar-group" text="GERAL"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goVisaoGeral" styleClass="sidebar-link" text="Visão Geral"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goPainel" styleClass="sidebar-link" text="Painel"/>

            <Label styleClass="sidebar-group" text="FERRAMENTAS"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goEditor" styleClass="sidebar-link" text="Editor (Feedback/Parecer)"/>
            <Button fx:id="btnChat" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goChat" styleClass="sidebar-link" text="Chat"/>
        </VBox>

        <!-- Main Content -->
        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <!-- Breadcrumbs -->
            <Label styleClass="subtle" text="Orientador / Editor"/>

            <!-- Título -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Orientador — Editor/Correção"/>
                <Label styleClass="subtitle" text="Selecione um trecho do texto do aluno e registre seu feedback."/>
            </VBox>

            <!-- Corpo: SplitPane com texto do aluno e painel de comentários -->
            <SplitPane dividerPositions="0.55" VBox.vgrow="ALWAYS">
                <!-- Coluna esquerda: texto do aluno (somente leitura) -->
                <VBox spacing="8.0">
                    <Label text="Texto do aluno" styleClass="subtitle"/>
                    <TextArea fx:id="txtAluno" editable="false" wrapText="true" VBox.vgrow="ALWAYS"
                              promptText="(conteúdo em Markdown da seção)"/>
                </VBox>

                <!-- Coluna direita: comentários -->
                <VBox spacing="8.0">
                    <Label text="Feedback" styleClass="subtitle"/>

                    <ScrollPane fx:id="commentsScroll" fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                        <VBox fx:id="commentsSection" spacing="8.0" styleClass="comments-section"/>
                    </ScrollPane>

                    <VBox spacing="6.0">
                        <Label text="Comentário / feedback" styleClass="field-label"/>
                        <TextArea fx:id="txtMarkdown" promptText="Digite seu feedback… (use seleção do texto ao lado para vincular o trecho)"/>
                        <HBox spacing="8.0" alignment="CENTER_RIGHT">
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="Comentar" onAction="#comentar" styleClass="btn-primary"/>
                            <Button text="Voltar" onAction="#voltar"/>
                        </HBox>
                    </VBox>
                </VBox>
            </SplitPane>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/></padding>
        <Label styleClass="subtle" text="Wireframe API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Módulo Orientador"/>
    </HBox>
</VBox>
