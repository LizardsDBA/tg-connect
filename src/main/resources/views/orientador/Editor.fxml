<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<VBox spacing="0" stylesheets="@/application.css"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.orientador.EditorOrientadorController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets bottom="10.0" left="16.0" right="16.0" top="10.0"/></padding>
        <Button fx:id="btnToggleSidebar" text="☰" onAction="#toggleSidebar" styleClass="toggle-sidebar"/>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnSouCoordenador" onAction="#goHomeCoord" styleClass="btn-trade" text="Sou Coordenador"/>
        <Button onAction="#goHome" text="Home"/>
        <Button onAction="#logout" text="Sair"/>
    </HBox>

    <!-- Main (Sidebar + Content) -->
    <HBox fx:id="mainLayout" VBox.vgrow="ALWAYS" spacing="16.0">
        <padding><Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/></padding>

        <!-- Sidebar -->
        <VBox fx:id="sidebar" minWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Orientador"/>
            <Label styleClass="sidebar-group" text="GERAL"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goVisaoGeral" styleClass="sidebar-link" text="Visão Geral"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goPainel" styleClass="sidebar-link" text="Painel"/>

            <Label styleClass="sidebar-group" text="FERRAMENTAS"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goEditor" styleClass="sidebar-link" text="Feedback"/>
            <Button fx:id="btnChat" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goChat" styleClass="sidebar-link" text="Chat"/>
        </VBox>

        <!-- Main Content Card -->
        <VBox spacing="16.0" styleClass="card" HBox.hgrow="ALWAYS">

            <!-- Breadcrumbs -->
            <Label styleClass="subtle" text="Orientador / Feedback"/>

            <!-- Título -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Orientador — Feedback por campo"/>
                <Label styleClass="subtitle" text="Avalie cada campo individualmente (MD renderizado)."/>
            </VBox>

            <!-- Barra de status (aluno/parte/versão/status) -->
            <HBox alignment="CENTER_LEFT" spacing="12.0">
                <Label text="Aluno:"/>
                <Label fx:id="lblAluno" text=" "/>
                <Label text=" |   Versão:"/>
                <Label fx:id="lblVersao" text=" "/>
                <Label text=" |   Status da versão:"/>
                <Label fx:id="lblStatus" text=" " />
            </HBox>

            <!-- Abas das Partes -->
            <TabPane fx:id="tabPartes"
                     VBox.vgrow="ALWAYS"
                     maxHeight="Infinity"
                     side="TOP"
                     styleClass="editor-tabs"
                     tabClosingPolicy="UNAVAILABLE">

            <tabs>
                    <Tab fx:id="tabApresentacao" text="Apresentação">
                        <content>
                            <ScrollPane fitToWidth="true" fitToHeight="true" prefViewportHeight="600">
                            <content>
                                    <VBox spacing="16.0">
                                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                                        <!-- Card - Nome Completo -->
                                        <TitledPane text="Nome completo" expanded="false">
                                            <content>
                                                <VBox spacing="8.0">
                                                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                                                    <TextArea fx:id="txtNomeCompleto" editable="false" wrapText="true" prefRowCount="3"/>
                                                    <WebView fx:id="webNomeCompleto" prefHeight="120"/>
                                                    <HBox spacing="8">
                                                        <Button fx:id="btnAprovNomeCompleto" text="Aprovar" onAction="#onAprovarCampo"/>
                                                        <Button fx:id="btnReprovNomeCompleto" text="Reprovar" onAction="#onReprovarCampo"/>
                                                        <Label fx:id="lblNomeCompletoStatus" styleClass="badge"/>
                                                    </HBox>
                                                </VBox>
                                            </content>
                                        </TitledPane>

                                        <!-- Card - Curso -->
                                        <TitledPane text="Curso" expanded="false">
                                            <content>
                                                <VBox spacing="8.0">
                                                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                                                    <TextArea fx:id="txtCurso" editable="false" wrapText="true" prefRowCount="2"/>
                                                    <WebView fx:id="webCurso" prefHeight="80"/>
                                                    <HBox spacing="8">
                                                        <Button fx:id="btnAprovCurso" text="Aprovar" onAction="#onAprovarCampo"/>
                                                        <Button fx:id="btnReprovCurso" text="Reprovar" onAction="#onReprovarCampo"/>
                                                        <Label fx:id="lblCursoStatus" styleClass="badge"/>
                                                    </HBox>
                                                </VBox>
                                            </content>
                                        </TitledPane>

                                        <!-- Card - Histórico Acadêmico -->
                                        <TitledPane text="Histórico acadêmico" expanded="true">
                                            <content>
                                                <VBox spacing="8.0">
                                                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                                                    <TextArea fx:id="txtHistoricoAcademico" editable="false" wrapText="true" prefRowCount="6"/>
                                                    <WebView fx:id="webHistoricoAcademico" prefHeight="160"/>
                                                    <HBox spacing="8">
                                                        <Button fx:id="btnAprovHistoricoAcademico" text="Aprovar" onAction="#onAprovarCampo"/>
                                                        <Button fx:id="btnReprovHistoricoAcademico" text="Reprovar" onAction="#onReprovarCampo"/>
                                                        <Label fx:id="lblHistoricoAcademicoStatus" styleClass="badge"/>
                                                    </HBox>
                                                </VBox>
                                            </content>
                                        </TitledPane>

                                        <!-- (Repita padrão para demais campos) -->
                                    </VBox>
                                </content>
                            </ScrollPane>
                        </content>
                    </Tab>

                    <!-- API 1..6 -->
                    <Tab fx:id="tabApi1" text="API 1"><content><Label text="API 1 — campos individuais"/></content></Tab>
                    <Tab fx:id="tabApi2" text="API 2"><content><Label text="API 2 — campos individuais"/></content></Tab>
                    <Tab fx:id="tabApi3" text="API 3"><content><Label text="API 3 — campos individuais"/></content></Tab>
                    <Tab fx:id="tabApi4" text="API 4"><content><Label text="API 4 — campos individuais"/></content></Tab>
                    <Tab fx:id="tabApi5" text="API 5"><content><Label text="API 5 — campos individuais"/></content></Tab>
                    <Tab fx:id="tabApi6" text="API 6"><content><Label text="API 6 — campos individuais"/></content></Tab>

                    <!-- Resumo -->
                    <Tab fx:id="tabResumo" text="Resumo">
                        <content>
                            <VBox spacing="12.0">
                                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                                <TextArea fx:id="txtResumoMd" editable="false" wrapText="true" prefRowCount="12"/>
                                <WebView fx:id="webResumo" prefHeight="260"/>
                                <HBox spacing="8">
                                    <Button fx:id="btnAprovResumoVersao" text="Aprovar versão" onAction="#onAprovarResumoVersao"/>
                                    <Button fx:id="btnReprovResumoVersao" text="Reprovar versão" onAction="#onReprovarResumoVersao"/>
                                    <Label fx:id="lblResumoVersaoStatus" styleClass="badge"/>
                                </HBox>
                            </VBox>
                        </content>
                    </Tab>

                    <Tab fx:id="tabFinais" text="Considerações finais">
                        <content>
                            <Label text="As considerações finais agora são validadas por campo em 'Apresentação' → 'consideracoes_finais'."/>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>

            <!-- Lista de orientandos + busca -->
            <HBox spacing="16.0" VBox.vgrow="ALWAYS">
                <VBox prefWidth="320.0" spacing="8.0">
                    <Label text="Alunos Orientados"/>
                    <TextField fx:id="txtBuscaAluno" promptText="Buscar por nome..."/>
                    <TableView fx:id="tblAlunos" prefHeight="560">
                        <columns>
                            <TableColumn fx:id="colNome" text="Nome" prefWidth="315.0" resizable="false" sortable="false"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Observações / Comentário -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Comentário para o aluno (aparecerá na tela de Chat)"/>
                    <HBox spacing="12">
                        <TextArea fx:id="txtComentario" prefRowCount="3" promptText="Escreva seu comentário..." HBox.hgrow="ALWAYS"/>
                        <VBox alignment="TOP_RIGHT" spacing="8">
                            <Button fx:id="btnEnviarComentario" maxWidth="Infinity" text="Enviar comentário"/>
                        </VBox>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets bottom="12.0" left="16.0" right="12.0" top="12.0"/></padding>
        <Label styleClass="subtle" text="TG Connect API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Módulo Orientador"/>
    </HBox>
</VBox>
