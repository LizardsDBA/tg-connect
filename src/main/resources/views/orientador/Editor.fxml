<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.orientador.EditorOrientadorController"
      spacing="0"
      stylesheets="@/application.css">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/></padding>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Home" onAction="#goHome"/>
        <Button text="Sair" onAction="#logout"/>
    </HBox>

    <!-- Main (Sidebar + Content) -->
    <HBox VBox.vgrow="ALWAYS" spacing="16.0">
        <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>

        <!-- Sidebar -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Orientador"/>
            <Label styleClass="sidebar-group" text="GERAL"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goVisaoGeral" styleClass="sidebar-link" text="Visão Geral"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goPainel" styleClass="sidebar-link" text="Painel"/>

            <Label styleClass="sidebar-group" text="FERRAMENTAS"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goEditor" styleClass="sidebar-link" text="Editor (Feedback/Parecer)"/>
            <Button fx:id="btnChat" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goChat" styleClass="sidebar-link" text="Chat"/>
        </VBox>

        <!-- Main Content Card -->
        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <!-- Breadcrumbs -->
            <Label styleClass="subtle" text="Orientador / Feedback"/>

            <!-- Título -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Orientador — Feedback"/>
                <Label styleClass="subtitle" text="Converse com seus alunos (1 canal por aluno)."/>
            </VBox>

            <!-- Barra de status (aluno/parte/versão/status) -->
            <HBox spacing="12.0" alignment="CENTER_LEFT">
                <children>
                    <Label text="Aluno:"/>
                    <Label fx:id="lblAluno" text="—"/>
                    <Label text=" • Parte:"/>
                    <Label fx:id="lblParte" text="—"/>
                    <Label text=" • Versão:"/>
                    <Label fx:id="lblVersao" text="—"/>
                    <Label text=" • Status:"/>
                    <Label fx:id="lblStatus" text="—"/>
                </children>
            </HBox>

            <!-- Abas das Partes (no topo do conteúdo) -->
            <TabPane fx:id="tabPartes" tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab text="Apresentação" fx:id="tabApresentacao"/>
                    <Tab text="API 1" fx:id="tabApi1"/>
                    <Tab text="API 2" fx:id="tabApi2"/>
                    <Tab text="API 3" fx:id="tabApi3"/>
                    <Tab text="API 4" fx:id="tabApi4"/>
                    <Tab text="API 5" fx:id="tabApi5"/>
                    <Tab text="API 6" fx:id="tabApi6"/>
                    <Tab text="Resumo" fx:id="tabResumo"/>
                    <Tab text="Considerações finais" fx:id="tabFinais"/>
                </tabs>
            </TabPane>

            <!-- Conteúdo dividido: lista de alunos (esq) + preview/ações (dir) -->
            <HBox spacing="16.0" VBox.vgrow="ALWAYS">

                <!-- Lista de orientandos -->
                <VBox spacing="8.0" prefWidth="320.0">
                    <Label text="Orientandos"/>
                    <TextField fx:id="txtBuscaAluno" promptText="Buscar por nome..."/>
                    <TableView fx:id="tblAlunos" prefHeight="560">
                        <columns>
                            <TableColumn fx:id="colNome" text="Nome" prefWidth="280"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Preview + Comentário + Ações -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Preview (Markdown) — somente leitura"/>
                    <TextArea fx:id="txtPreview" editable="false" wrapText="true" VBox.vgrow="ALWAYS" prefRowCount="22"/>

                    <Label text="Comentário para o aluno (aparecerá na tela de Chat)"/>
                    <HBox spacing="12">
                        <TextArea fx:id="txtComentario" promptText="Escreva seu comentário..."
                                  prefRowCount="3" HBox.hgrow="ALWAYS"/>
                        <VBox spacing="8" alignment="TOP_RIGHT">
                            <Button fx:id="btnEnviarComentario" text="Enviar comentário" maxWidth="Infinity"/>
                            <Button fx:id="btnConcluirParte" text="Marcar como concluída" maxWidth="Infinity"/>
                        </VBox>
                    </HBox>
                </VBox>

            </HBox>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/></padding>
        <Label styleClass="subtle" text="Wireframe API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Módulo Orientador"/>
    </HBox>
</VBox>
