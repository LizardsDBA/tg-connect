<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.orientador.HistoricoOrientadorController"
      spacing="0">

    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding>
            <Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/>
        </padding>
        <Button fx:id="btnToggleSidebar" text="☰" onAction="#toggleSidebar" styleClass="toggle-sidebar"/>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="HOME" onAction="#goHome"/>
        <Button text="SAIR" onAction="#logout"/>
    </HBox>

    <HBox fx:id="mainLayout" VBox.vgrow="ALWAYS" spacing="16.0">
        <padding>
            <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
        </padding>

        <VBox fx:id="sidebar" minWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Orientador"/>
            <Label styleClass="sidebar-group" text="GERAL"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Visão Geral" onAction="#goVisaoGeral"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Painel" onAction="#goPainel"/>
            <Label styleClass="sidebar-group" text="FERRAMENTAS"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goEditor" styleClass="sidebar-link" text="Feedback"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goChat" styleClass="sidebar-link" text="Chat"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    styleClass="sidebar-link" text="Histórico de Versões" onAction="#goHistorico"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goSolicitacoes" styleClass="sidebar-link" text="Solicitações"/>
        </VBox>

        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <VBox spacing="6.0">
                <Label styleClass="title" text="Histórico de Versões — Orientador"/>
                <Label styleClass="subtitle"
                       text="Selecione um aluno para visualizar o histórico completo de versões do TG."/>
            </VBox>

            <SplitPane dividerPositions="0.3" VBox.vgrow="ALWAYS">

                <VBox spacing="8.0" style="-fx-padding: 8;">
                    <Label text="Meus Orientandos" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TextField fx:id="txtBuscaAluno" promptText="Buscar aluno..."
                               style="-fx-border-color: #d6d6d6; -fx-border-width: 1; -fx-border-radius: 4;"/>
                    <TableView fx:id="tblAlunos" VBox.vgrow="ALWAYS"
                               style="-fx-border-color: #d6d6d6; -fx-border-width: 1; -fx-border-radius: 4;">
                        <columns>
                            <TableColumn fx:id="colNome" text="Nome do Aluno" prefWidth="250"/>
                        </columns>
                    </TableView>
                </VBox>

                <VBox fx:id="previewContainer" spacing="12.0" style="-fx-padding: 8;">

                    <VBox spacing="8.0" style="-fx-background-color: #f8f9fa; -fx-padding: 12;
                                                -fx-border-color: #d6d6d6; -fx-border-width: 1; -fx-border-radius: 4;">
                        <Label text="Aluno:" style="-fx-font-size: 12px; -fx-text-fill: #6f6f6f;"/>
                        <Label fx:id="lblAlunoSelecionado" text="—"
                               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    </VBox>

                    <SplitPane dividerPositions="0.25" VBox.vgrow="ALWAYS">

                        <VBox spacing="8.0">
                            <Label text="Histórico (Versões e Feedbacks)" style="-fx-font-size: 13px; -fx-font-weight: 600;"/>

                            <HBox spacing="4.0" alignment="CENTER_LEFT">
                                <DatePicker fx:id="dpDataInicio" promptText="Data Início" prefWidth="110"/>
                                <Label text="até"/>
                                <DatePicker fx:id="dpDataFim" promptText="Data Fim" prefWidth="110"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button fx:id="btnFiltrar" text="Filtrar" styleClass="btn-primary" prefWidth="70"/>
                            </HBox>

                            <ListView fx:id="listVersions" VBox.vgrow="ALWAYS"
                                      style="-fx-border-color: #d6d6d6; -fx-border-width: 1; -fx-border-radius: 4;"/>
                        </VBox>

                        <VBox spacing="8.0">

                            <HBox spacing="16.0" alignment="CENTER_LEFT">
                                <VBox spacing="4.0">
                                    <Label text="Versão:" style="-fx-font-size: 12px; -fx-text-fill: #6f6f6f;"/>
                                    <Label fx:id="lblVersaoSelecionada" text="—"
                                           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                                </VBox>
                                <VBox spacing="4.0">
                                    <Label text="Data:" style="-fx-font-size: 12px; -fx-text-fill: #6f6f6f;"/>
                                    <Label fx:id="lblDataEnvio" text="—" style="-fx-font-size: 14px;"/>
                                </VBox>
                            </HBox>

                            <SplitPane orientation="HORIZONTAL" dividerPositions="0.5" VBox.vgrow="ALWAYS">
                                <VBox spacing="4.0">
                                    <Label text="Markdown" style="-fx-font-size: 13px; -fx-font-weight: 600;"/>
                                    <TextArea fx:id="txtMarkdownSource" editable="false" wrapText="true"
                                              VBox.vgrow="ALWAYS"
                                              style="-fx-font-family: 'Courier New', monospace; -fx-font-size: 12px;
                                                     -fx-border-color: #d6d6d6; -fx-border-width: 1; -fx-border-radius: 4;
                                                     -fx-control-inner-background: #f8f9fa;"/>
                                </VBox>
                                <VBox spacing="4.0">
                                    <Label text="Preview" style="-fx-font-size: 13px; -fx-font-weight: 600;"/>
                                    <WebView fx:id="webPreview" VBox.vgrow="ALWAYS"
                                             style="-fx-border-color: #d6d6d6; -fx-border-width: 1; -fx-border-radius: 4;"/>
                                </VBox>
                            </SplitPane>

                            <VBox fx:id="feedbackContainer" spacing="4.0" managed="false" visible="false"
                                  style="-fx-background-color: #d1ecf1; -fx-border-color: #17a2b8;
                                         -fx-border-width: 1; -fx-border-radius: 4; -fx-padding: 12;">
                                <Label text="Feedback Enviado"
                                       style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #0c5460;"/>
                                <TextArea fx:id="txtFeedback" editable="false" wrapText="true"
                                          prefRowCount="3"
                                          style="-fx-background-color: transparent;
                                                 -fx-border-color: transparent;
                                                 -fx-text-fill: #0c5460;"/>
                            </VBox>
                        </VBox>
                    </SplitPane>
                </VBox>
            </SplitPane>
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding>
            <Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/>
        </padding>
        <Label styleClass="subtle" text="TG Connect API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Grupo LizardsDBA"/>
    </HBox>

</VBox>