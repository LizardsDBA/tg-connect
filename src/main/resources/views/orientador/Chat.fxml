<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.orientador.ChatOrientadorController"
      spacing="0"
      stylesheets="@/application.css">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/></padding>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Home" onAction="#goHome"/>
        <Button text="Sair" onAction="#logout"/>
    </HBox>

    <!-- Main Layout with Sidebar -->
    <HBox VBox.vgrow="ALWAYS" spacing="16.0">
        <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>

        <!-- Sidebar -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Orientador"/>
            <Label styleClass="sidebar-group" text="GERAL"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goVisaoGeral" styleClass="sidebar-link" text="Visão Geral"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goPainel" styleClass="sidebar-link" text="Painel"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goNotificacoes" styleClass="sidebar-link" text="Notificações"/>

            <Label styleClass="sidebar-group" text="FERRAMENTAS"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goEditor" styleClass="sidebar-link" text="Editor (Feedback/Parecer)"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goParecer" styleClass="sidebar-link" text="Parecer"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goImportar" styleClass="sidebar-link" text="Importar (Markdown/TG)"/>
            <Button fx:id="btnChat" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goChat" styleClass="sidebar-link" text="Chat"/>
        </VBox>

        <!-- Main Content -->
        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <!-- Breadcrumbs -->
            <Label styleClass="subtle" text="Orientador / Chat"/>

            <!-- Título -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Orientador — Chat"/>
                <Label styleClass="subtitle" text="Converse com seus alunos (1 canal por aluno)."/>
            </VBox>

            <!-- Conteúdo: lista de alunos + área de conversa -->
            <HBox spacing="12.0" VBox.vgrow="ALWAYS">
                <!-- Lista de Alunos -->
                <VBox spacing="8.0" prefWidth="260">
                    <Label text="Alunos" styleClass="subtitle"/>
                    <ListView fx:id="lstAlunos" VBox.vgrow="ALWAYS"/>
                </VBox>

                <!-- Área de Conversa -->
                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="8.0" styleClass="chat-top">
                        <Label text="Conversa com:" styleClass="subtle"/>
                        <Label fx:id="lblChatHeader" text="(selecione um aluno)"/>
                    </HBox>

                    <ScrollPane fx:id="chatScroll" fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                        <VBox fx:id="chatMessages" spacing="8.0" fillWidth="true" styleClass="chat-messages"/>
                    </ScrollPane>

                    <HBox spacing="8.0" alignment="CENTER_LEFT" styleClass="chat-input">
                        <TextField fx:id="txtMessage" HBox.hgrow="ALWAYS" promptText="Digite sua mensagem..." onAction="#enviarMensagem"/>
                        <Button fx:id="btnSend" text="Enviar" onAction="#enviarMensagem"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/></padding>
        <Label styleClass="subtle" text="Wireframe API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Módulo Orientador"/>
    </HBox>
</VBox>
