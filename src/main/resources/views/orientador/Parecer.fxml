<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatec.api.controller.orientador.ParecerOrientadorController"
      spacing="0"
      stylesheets="@/application.css">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
        <padding><Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/></padding>
        <Label styleClass="logo" text="API/TG"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button onAction="#goHome" text="Home"/>
        <Button onAction="#logout" text="Sair"/>
    </HBox>

    <!-- Main Layout with Sidebar -->
    <HBox VBox.vgrow="ALWAYS" spacing="16.0">
        <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>

        <!-- Sidebar -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Orientador" />
            <Label styleClass="sidebar-group" text="GERAL" />
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goVisaoGeral" styleClass="sidebar-link" text="Visão Geral"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goPainel" styleClass="sidebar-link" text="Painel"/>

            <Label styleClass="sidebar-group" text="FERRAMENTAS" />
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goEditor" styleClass="sidebar-link" text="Editor (Feedback/Parecer)"/>
            <Button fx:id="btnParecer" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goParecer" styleClass="sidebar-link" text="Parecer"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goImportar" styleClass="sidebar-link" text="Importar (Markdown/TG)"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goNotificacoes" styleClass="sidebar-link" text="Notificações"/>
            <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                    onAction="#goChat" styleClass="sidebar-link" text="Chat"/>
        </VBox>

        <!-- Main Content -->
        <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">

            <!-- Breadcrumbs -->
            <Label styleClass="subtle" text="Orientador / Parecer"/>

            <!-- Page Title -->
            <VBox spacing="6.0">
                <Label styleClass="title" text="Revisão / Parecer"/>
                <Label styleClass="subtitle" text="Leitura do texto do aluno e registro do parecer final por seção ou entrega."/>
            </VBox>

            <!-- Content Grid -->
            <GridPane hgap="12.0" vgap="12.0">
                <columnConstraints>
                    <ColumnConstraints percentWidth="66" hgrow="ALWAYS"/>
                    <ColumnConstraints percentWidth="34" hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>

                <!-- Left Column - Document Reading Area -->
                <VBox GridPane.columnIndex="0" spacing="8.0" styleClass="card">
                    <Label styleClass="subtitle" text="Documento do Aluno"/>
                    <TextArea fx:id="txtDocumentoAluno" editable="false" wrapText="true" VBox.vgrow="ALWAYS"
                              promptText="(conteúdo em Markdown da seção/versão do aluno)"/>
                </VBox>

                <!-- Right Column - Parecer Area -->
                <VBox GridPane.columnIndex="1" spacing="8.0" styleClass="card">
                    <Label styleClass="subtitle" text="Parecer"/>
                    <TextArea fx:id="txtParecer" prefRowCount="8" wrapText="true"
                              promptText="Escreva aqui o parecer do orientador..."/>

                    <!-- Ações -->
                    <HBox alignment="CENTER_RIGHT" spacing="8.0">
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button onAction="#salvarParecer" styleClass="btn-primary" text="Salvar"/>
                        <Button onAction="#goChat" text="Ir ao Chat"/>
                    </HBox>
                </VBox>
            </GridPane>
        </VBox>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
        <padding><Insets top="12.0" right="12.0" bottom="12.0" left="16.0"/></padding>
        <Label styleClass="subtle" text="Wireframe API 2025-2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="subtle" text="Módulo Orientador"/>
    </HBox>
</VBox>
