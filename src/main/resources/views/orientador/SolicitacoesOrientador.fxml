<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.edu.fatec.api.controller.orientador.SolicitacoesOrientadorController"
            stylesheets="@/application.css">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
            <padding>
                <Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/>
            </padding>
            <Button fx:id="btnToggleSidebar" text="☰" onAction="#toggleSidebar" styleClass="toggle-sidebar"/>
            <Label styleClass="logo" text="API/TG"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnSouCoordenador" styleClass="btn-trade" text="Sou Coordenador" onAction="#goHomeCoord"/>
            <Button text="Home" onAction="#goHome"/>
            <Button text="Sair" onAction="#logout"/>
        </HBox>
    </top>

    <center>
        <HBox fx:id="mainLayout" spacing="16.0">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>

            <VBox fx:id="sidebar" minWidth="240.0" spacing="8.0" styleClass="sidebar">
                <Label styleClass="sidebar-title" text="Orientador"/>
                <Label styleClass="sidebar-group" text="GERAL"/>
                <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                        onAction="#goVisaoGeral" styleClass="sidebar-link" text="Visão Geral"/>
                <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                        onAction="#goPainel" styleClass="sidebar-link" text="Painel"/>

                <Label styleClass="sidebar-group" text="FERRAMENTAS"/>
                <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                        onAction="#goEditor" styleClass="sidebar-link" text="Feedback"/>
                <Button fx:id="btnChat" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                        onAction="#goChat" styleClass="sidebar-link" text="Chat"/>
                <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                        onAction="#goHistorico" styleClass="sidebar-link" text="Histórico de Versões"/>
                <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308"
                        onAction="#goSolicitacoes" styleClass="sidebar-link active" text="Solicitações"/>
            </VBox>

            <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">
                <Label styleClass="subtle" text="Orientador / Solicitações"/>

                <VBox spacing="6.0">
                    <Label styleClass="title" text="Solicitações de Orientação"/>
                    <Label styleClass="subtitle" text="Gerencie as solicitações de orientação recebidas"/>
                </VBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Filtrar por:" styleClass="field-label"/>
                    <ComboBox fx:id="cmbFiltroStatus" prefWidth="150"/>
                </HBox>

                <Separator/>

                <SplitPane dividerPositions="0.5" styleClass="split-pane" VBox.vgrow="ALWAYS">
                    <VBox spacing="10" styleClass="card">
                        <Label text="Solicitações" styleClass="subtitle"/>
                        <TableView fx:id="tblSolicitacoes" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colAluno" text="Aluno" prefWidth="200"/>
                                <TableColumn fx:id="colData" text="Data" prefWidth="150"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>

                    <VBox fx:id="containerDetalhes" spacing="15" styleClass="card">
                        <Label text="Detalhes da Solicitação" styleClass="subtitle"/>

                        <VBox spacing="5">
                            <Label text="Aluno:" styleClass="field-label"/>
                            <Label fx:id="lblNomeAluno" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                        </VBox>

                        <VBox spacing="8">
                            <Label text="Proposta de TG:" styleClass="field-label"/>
                            <GridPane hgap="10" vgap="5">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="60" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>

                                <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                                <Label fx:id="lblTituloTg" text="-" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                <Label text="Tema:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                                <Label fx:id="lblTemaTg" text="-" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            </GridPane>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Data da Solicitação:" styleClass="field-label"/>
                            <Label fx:id="lblDataSolicitacao" styleClass="subtle"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Status:" styleClass="field-label"/>
                            <Label fx:id="lblStatusAtual" styleClass="pill"/>
                        </VBox>

                        <Separator/>

                        <VBox spacing="10">
                            <Label text="Justificativa (para recusa):" styleClass="field-label"/>
                            <TextArea fx:id="txtJustificativa"
                                      promptText="Digite a justificativa caso recuse a solicitação..."
                                      wrapText="true"
                                      prefRowCount="4"/>
                        </VBox>

                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <Button fx:id="btnRecusar" text="Recusar" styleClass="btn-secondary"
                                    style="-fx-background-color: #b20f19; -fx-text-fill: white;"/>
                            <Button fx:id="btnAprovar" text="Aprovar" styleClass="btn-primary"/>
                        </HBox>
                    </VBox>
                </SplitPane>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="footer" spacing="0">
            <padding>
                <Insets top="10.0" right="16.0" bottom="10.0" left="16.0"/>
            </padding>
            <Label text="TG Connect API 2025-2" styleClass="footer-text"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Grupo LizardsDBA" styleClass="footer-text"/>
        </HBox>
    </bottom>
</BorderPane>