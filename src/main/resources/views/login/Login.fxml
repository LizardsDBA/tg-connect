<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.fatec.api.controller.LoginController" 
      alignment="CENTER" spacing="0">
   
   <!-- Header -->
   <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
      <padding>
         <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
      </padding>
      <Label styleClass="logo" text="API/TG" />
      <Region HBox.hgrow="ALWAYS" />
      <Button text="Home" />
      <Button text="Sair" />
   </HBox>
   
   <!-- Main Content Area -->
   <StackPane VBox.vgrow="ALWAYS" alignment="CENTER">
      <padding>
         <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
      </padding>
      
      <!-- Login Card -->
      <VBox alignment="CENTER" spacing="12.0" maxWidth="520.0" styleClass="card">
         
         <!-- Title -->
         <Label styleClass="title" text="Login" />
         
         <!-- Subtitle -->
         <Label styleClass="subtitle" text="Use os botões para simular o perfil" />
         
         <!-- Form Fields -->
         <VBox spacing="8.0">
            <VBox spacing="6.0">
               <Label styleClass="field-label" text="Usuário" />
               <TextField promptText="simule o login nos botões abaixo" />
            </VBox>
            <VBox spacing="6.0">
               <Label styleClass="field-label" text="Senha" />
               <PasswordField promptText="simulado" />
            </VBox>
         </VBox>
         
         <!-- Login Buttons -->
         <HBox alignment="CENTER" spacing="8.0">
            <Button onAction="#goAluno" styleClass="btn-primary" text="Entrar como Aluno" />
            <Button onAction="#goOrientador" text="Orientador" />
            <Button onAction="#goCoordenador" text="Coordenador" />
         </HBox>
      </VBox>
   </StackPane>
   
   <!-- Footer -->
   <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
      <padding>
         <Insets bottom="12.0" left="16.0" right="12.0" top="12.0" />
      </padding>
      <Label styleClass="subtle" text="Wireframe API 2025-2" />
      <Region HBox.hgrow="ALWAYS" />
      <Label styleClass="subtle" text="Grupo LizzardsDBA" />
   </HBox>
</VBox>
